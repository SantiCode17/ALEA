<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/alea_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/alea_glass_border"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Unread Indicator -->
        <View
            android:id="@+id/unreadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_online_indicator"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- Icon Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconBackground"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="4dp"
            app:cardBackgroundColor="@color/alea_primary_alpha20"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/unreadIndicator"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/emojiIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="⚔️" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/alea_text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/dismissButton"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toTopOf="@id/iconBackground"
            tools:text="New Challenge!" />

        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/alea_text_secondary"
            android:textSize="13sp"
            app:layout_constraintEnd_toStartOf="@id/dismissButton"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toBottomOf="@id/notificationTitle"
            tools:text="Player123 challenged you to beat their high score!" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/alea_text_tertiary"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toBottomOf="@id/notificationMessage"
            tools:text="2 hours ago" />

        <!-- Dismiss Button -->
        <ImageButton
            android:id="@+id/dismissButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/notifications_dismiss"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/alea_text_tertiary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
