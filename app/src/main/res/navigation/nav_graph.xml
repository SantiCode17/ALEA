<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardingFragment">

    <!-- Auth Flow -->
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.alea.ui.onboarding.OnboardingFragment"
        android:label="Onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboarding_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_onboarding_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.alea.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.alea.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main Flow (with Bottom Navigation) -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.alea.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_challengeDetail"
            app:destination="@id/challengeDetailFragment" />
        <action
            android:id="@+id/action_home_to_notifications"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_home_to_createChallenge"
            app:destination="@id/createChallengeFragment" />
    </fragment>

    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.example.alea.ui.ranking.RankingFragment"
        android:label="Ranking"
        tools:layout="@layout/fragment_ranking" />

    <fragment
        android:id="@+id/friendsFragment"
        android:name="com.example.alea.ui.friends.FriendsFragment"
        android:label="Friends"
        tools:layout="@layout/fragment_friends">
        <action
            android:id="@+id/action_friends_to_addFriend"
            app:destination="@id/addFriendBottomSheet" />
        <action
            android:id="@+id/action_friends_to_chat"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.alea.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- Secondary Screens -->
    <fragment
        android:id="@+id/createChallengeFragment"
        android:name="com.example.alea.ui.challenge.CreateChallengeFragment"
        android:label="Create Challenge"
        tools:layout="@layout/fragment_create_challenge">
        <action
            android:id="@+id/action_createChallenge_to_victory"
            app:destination="@id/victoryFragment"
            app:popUpTo="@id/createChallengeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/victoryFragment"
        android:name="com.example.alea.ui.challenge.VictoryFragment"
        android:label="Victory"
        tools:layout="@layout/fragment_victory" />

    <fragment
        android:id="@+id/challengeDetailFragment"
        android:name="com.example.alea.ui.challenge.ChallengeDetailFragment"
        android:label="Challenge Detail"
        tools:layout="@layout/fragment_challenge_detail">
        <argument
            android:name="challengeId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.alea.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="friendId"
            app:argType="string" />
        <argument
            android:name="friendName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.alea.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settings_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.alea.ui.notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications">
        <action
            android:id="@+id/action_notifications_to_challengeDetail"
            app:destination="@id/challengeDetailFragment" />
    </fragment>

    <!-- Bottom Sheet -->
    <dialog
        android:id="@+id/addFriendBottomSheet"
        android:name="com.example.alea.ui.friends.AddFriendBottomSheet"
        android:label="Add Friend"
        tools:layout="@layout/bottom_sheet_add_friend" />

</navigation>
